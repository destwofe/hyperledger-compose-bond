{
  "engines": {
    "composer": "^0.19.8"
  },
  "name": "bond",
  "version": "0.0.4",
  "description": "first development application on hyperledger fabric compose for popouse bond",
  "scripts": {
    "prepublish": "mkdirp ./dist && composer archive create --sourceType dir --sourceName . -a ./dist/bond.bna",
    "build": "npm run prepublish",
    "deploy:local": "npm run prepublish; npm run deploy:install; npm run deploy:upgrade",
    "deploy:install": "composer network install --card PeerAdmin@hlfv1 --archiveFile ./dist/bond.bna",
    "deploy:upgrade": "composer network upgrade --card PeerAdmin@hlfv1 --networkName bond --networkVersion $npm_package_version",
    "pretest": "npm run lint",
    "lint": "eslint .",
    "test": "nyc mocha -t 0 test/*.js && cucumber-js",
    "rest": "composer-rest-server -c admin@bond -n never -w true"
  },
  "keywords": [
    "composer",
    "composer-network"
  ],
  "author": "destwofe",
  "email": "destwofe@gmail.com",
  "license": "Apache-2.0",
  "devDependencies": {
    "composer-admin": "^0.19.8",
    "composer-cli": "^0.19.8",
    "composer-client": "^0.19.8",
    "composer-common": "^0.19.8",
    "composer-connector-embedded": "^0.19.8",
    "composer-cucumber-steps": "^0.19.8",
    "chai": "latest",
    "chai-as-promised": "latest",
    "cucumber": "^2.2.0",
    "eslint": "latest",
    "nyc": "latest",
    "mkdirp": "latest",
    "mocha": "latest"
  }
}
